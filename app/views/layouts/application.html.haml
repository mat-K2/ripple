!!!
%html

  %head
    %title
      Rippler
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container
          = link_to "Rippler", root_path, :class => "brand"
          .nav-collapse.collapse
            - if user_signed_in?
              .navbar-text
                %ul.nav
                  %li= link_to "マイページ", mypage_path
              .navbar-text.pull-right
                %ul.nav
                  %li.dropdown
                    = link_to "#{current_user.name} <b class='caret'></b>".html_safe, "#", { :class => "dropdown-toggle", "data-toggle" => "dropdown" }
                    %ul{ :class => "dropdown-menu", :role => "menu", "aria-labelledby" => "dLabel" }
                      %li
                        = link_to "ユーザ情報の編集", edit_user_path(current_user)
                      %li.divider
                      %li.presentation
                        = link_to "ログアウト", destroy_user_session_path, :method => "delete"

            - else
              .pull-right
                %ul.nav
                  %li.dropdown
                    = link_to view_select_language, "#", { :class => "dropdown-toggle", "data-toggle" => "dropdown" }
                    %ul{ :class => "dropdown-menu", :role => "menu", "aria-labelledby" => "dLabel" }
                      %li
                        - ["ja", "en"].each do |lang|
                          = link_to t("views.defaults.#{lang}"), request.path + "?lang=#{lang}"
    .container
      = yield
