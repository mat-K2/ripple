%h1 サービスの新規追加
= link_to "グループ詳細に戻る", group_path(@group.id)

= form_for [@group, @service] do |f|
  = f.label :name, "サービス名"
  = f.text_field :name
  = f.label :url, "URL"
  = f.text_field :url
  = f.label :summary, "サマリー"
  = f.text_field :summary
  = f.label :introduction, "紹介文"
  = f.text_field :introduction
  = f.label :category, "カテゴリー"
  = f.text_field :category
  = f.submit "登録"
